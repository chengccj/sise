<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <corners android:radius="12dp" />

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="3dp"
                android:top="3dp" />

            <gradient
                android:angle="45"
                android:endColor="#3EA0E5"
                android:startColor="#58DE43"
                android:type="linear" />
        </shape>
    </item>

</layer-list>